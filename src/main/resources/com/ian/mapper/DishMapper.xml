<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ian.mapper.DishMapper">
    <update id="updateStatus" parameterType="com.ian.entity.Dish">
        update dish
        set status =#{dish.status},update_time=#{dish.updateTime},update_user=#{dish.updateUser}
        where id in
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>

    </update>
    <delete id="delete" parameterType="Long">
        delete
        from dish
        where id in
        <foreach collection="ids" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>

    </delete>


    <select id="list" resultType="com.ian.dto.DishDto">
        SELECT d.*, c.name as categoryName
        from dish d,category c
        <where>
            d.category_id =c.id
            <if test="name != null and name !=''">
                and d.name like concat('%',#{name},'%')
            </if>
        </where>
        order by update_time desc

    </select>
    <select id="selectByStatus" resultType="java.lang.Integer">
        select count(*)
        from dish
        where status = #{status} and id in
        <foreach collection="ids" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>
<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ian.mapper.SetmealMapper">
    <update id="updateStatusByIds" parameterType="com.ian.entity.Setmeal">
        update setmeal
        set status =#{setmeal.status},update_time=#{setmeal.updateTime},update_user=#{setmeal.updateUser}
        where id in
        <foreach collection="ids" index="index" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </update>

    <select id="list" resultType="com.ian.dto.SetmealDto">
        SELECT s.*, c.name as categoryName
        from setmeal s,category c
        <where>
            s.category_id =c.id
            <if test="name != null and name !=''">
                and s.name like concat('%',#{name},'%')
            </if>
        </where>
        order by update_time desc

    </select>
    <select id="selectStatus" resultType="java.lang.Integer">
        select count(*)
        from setmeal
        where  status =#{status} and id in
        <foreach collection="ids" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
    <delete id="deleteByIds"  parameterType="Long">
        delete
        from setmeal
        where id in
        <foreach collection="ids" item="item" index="index" open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>



</mapper>

